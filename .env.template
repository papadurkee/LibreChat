# LibreChat Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGO_URI=mongodb://username:password@localhost:27017/database

# API Keys (Replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_KEY=your_google_api_key_here
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=3080
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Email Configuration (if using email features)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# File Upload Configuration
FILE_UPLOAD_SIZE=10
FILE_UPLOAD_LIMIT=10

# Security Settings
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=true
REQUIRE_EMAIL_VERIFICATION=false
ALLOW_PASSWORD_RESET=false

# Rate Limiting
LOGIN_MAX=7
LOGIN_WINDOW=5
REGISTER_MAX=5
REGISTER_WINDOW=60

# MeiliSearch Configuration
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=your_meilisearch_master_key_here

# Additional API Keys (Optional)
SERPAPI_API_KEY=your_serpapi_key_here
TAVILY_API_KEY=your_tavily_key_here
WOLFRAM_APP_ID=your_wolfram_app_id_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# OAuth Configuration (Optional)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# LDAP Configuration (Optional)
LDAP_URL=ldap://your_ldap_server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_CREDENTIALS=your_ldap_password_here
LDAP_USER_SEARCH_BASE=ou=users,dc=example,dc=com

# SAML Configuration (Optional)
SAML_ENTRY_POINT=https://your_saml_provider/sso
SAML_ISSUER=your_saml_issuer_here
SAML_CERT=your_saml_certificate_here

# Azure Configuration (Optional)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_CONTAINER_NAME=files

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_s3_bucket_name_here

# Firebase Configuration (Optional)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here

# Advanced Configuration
NODE_ENV=production
DEBUG_LOGGING=true
CONSOLE_JSON=false
NO_INDEX=true
